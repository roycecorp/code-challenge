{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2017",
    "rootDir": "src",
    "outDir": "dist"
  }
}